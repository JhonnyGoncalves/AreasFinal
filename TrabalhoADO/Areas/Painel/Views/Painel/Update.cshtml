@model TrabalhoADO.Areas.Painel.Models.Empresa
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Painel/Views/Shared/_Layout.cshtml";
}
<div class="col-md-6">
    <h2>Editar</h2>
    @Html.ValidationSummary()
    <form class="form-group" action="" method="post">
        <fieldset>

            <div class="form-group">
                <label>Nome</label>
                <input id="Nome" name="Nome" type="text" value="@Model.Nome" class="form-group" />
            </div>
            <div class="form-group">
                <label>Peso</label>
                <input id="Telefone" name="Telefone" type="text" value="@Model.Telefone" class="form-group" />
            </div>
            <div class="form-group">
                <label>Cor</label>
                <input id="Endereco" name="Endereco" type="text" value="@Model.Endereco" class="form-group" />
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </fieldset>


    </form>
</div>
