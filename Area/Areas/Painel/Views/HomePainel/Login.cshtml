@model Area.Areas.Painel.Models.Usuario
@{
    ViewBag.Title = "Área de Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Área de Login</h1>
<ul class="nav nav-pills">
    <li><a href="~/Home/Index">Início</a></li>
    <li><a href="~/Home/Empresas">Empresas</a></li>
    <li class="active" id="botaoPainel"><a href="~/Painel/HomePainel/Login">Painel</a></li>

</ul>
<hr />
<br />
<em id="ErrorUser">@ViewBag.erro</em>
<form id="formPainel" class="form-horizontal" role="form" method="post" action="">
    <fieldset>
        <div class="form-group">
            <label id="User" class="col-sm-2 control-label">Usuário:</label>
            <div class="col-sm-10">
                <input id="User" name="User" type="text" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label id="Senha" class="col-sm-2 control-label">Senha:</label>
            <div class="col-sm-10">
                <input id="Senha" name="Senha" type="password" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Entrar</button>
            </div>
        </div>
    </fieldset>
</form>